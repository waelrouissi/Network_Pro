@model IEnumerable<ProfessionalNetwork.Models.QuestionVM>

@{
    ViewBag.Title = "listquestion";
}



@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<h2>List Questions</h2>

<br />
<br />


<!--/job1-->


@foreach (var item in Model)
{
    <div class="job-post-main row">
        <div class="col-md-9 job-post-info text-left">
            <div class="job-post-icon">
                <i class="fas fa-briefcase"></i>
            </div>
            <div class="job-single-sec">
                <h4>
                    <a href="#"> @Html.DisplayFor(modelItem => item.Content_Question)</a>
                </h4>
               <p class="my-2"></p>
                <br />
                <ul class="job-list-info d-flex">
                    <li>
                        <i class="fas fa-briefcase"></i> @Html.DisplayFor(modelItem => item.choice1)
                    </li>
                    <li>
                        <i class="fas fa-briefcase"></i> @Html.DisplayFor(modelItem => item.choice2)
                    </li>
                    <li>
                        <i class="fas fa-briefcase"></i> @Html.DisplayFor(modelItem => item.choice3)
                    </li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="col-md-3 job-single-time text-right">
            @*<span class="job-time">
                <i class="far fa-heart"></i> Update
            </span>*@
            <br />
            
            <a href="#" class="aply-btn ">Delete</a>
        </div>
    </div>

}

<br />
